<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#66111111" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top">

        <ImageView
            android:id="@+id/album"
            android:background="#6666"
            android:layout_width="220dip"
            android:layout_height="220dip"
            android:layout_margin="12dip" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="248dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="0dip">

           <ImageButton android:id="@+id/curplaylist"
               android:src="@drawable/ic_mp_current_playlist_btn"
               android:layout_width="68dip"
               android:layout_height="54dip"
               android:layout_marginBottom="14dip"/>

           <ImageButton android:id="@+id/shuffle"
               android:layout_width="68dip"
               android:layout_height="54dip"
               android:layout_marginBottom="14dip" />

           <ImageButton android:id="@+id/repeat"
               android:layout_width="68dip"
               android:layout_height="54dip" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingLeft="8dip"
        android:paddingTop="4dip"
        android:paddingBottom="4dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:src="@drawable/ic_mp_album_playback" />
        
        <TextView android:id="@+id/artistname"
            android:text="Artist name very long long logn long long"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="120dip"/>
        
        <TextView
            android:text=" - "
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        
        <TextView android:id="@+id/albumname"
            android:text="Album name"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingLeft="8dip"
        android:paddingTop="0dip"
        android:paddingBottom="6dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dip"
            android:src="@drawable/ic_mp_song_playback" />

        <TextView android:id="@+id/trackname"
            android:text="Track name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/audio_player_common" />

</LinearLayout>
